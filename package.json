{
  "name": "echobug",
  "displayName": "EchoBug",
  "description": "EchoBug gives you instant insight into your codeâ€™s flow and state.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "echobug-panel-container": [
        {
          "id": "echobugPanel",
          "name": "EchoBug",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "echobug-panel-container",
          "title": "EchoBug",
          "icon": "$(bug)"
        }
      ]
    },
    "configuration": {
      "title": "EchoBug",
      "properties": {
        "echobug.port": {
          "type": "number",
          "default": 3333,
          "minimum": 1,
          "maximum": 65535,
          "description": "Listen on this port for requests."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "commander": "^11.1.0",
    "inquirer": "^12.9.4"
  }
}
